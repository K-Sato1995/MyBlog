<%= render 'mobile_nav' %>
<div class = 'container-fluid'>
  <div class = 'row'>
      <%= render 'nav' %>
    <!-- Main Content  -->
    <div class="col-md-11 post-container">
      <div id="posts" class="transitions-enabled">
        <!-- POST IF -->
        <% if (@posts) %><!-- IF1 -->
          <% if (@posts.empty?) %><!-- IF2 -->
              <h3>No posts found.</h3>
            <% else %>
              <%= render 'post' %>
          <% end %> <!-- of IF2-->
        <% end %> <!-- of IF1-->
      </div>
      <%= paginate @posts %>
    </div>
  </div>
</div>
<script>
//Box FadeIn
$(".box").each(function(index) {
  $('.box').css('display', 'none');
  $(this).delay(200*index).fadeIn(100);
});
</script>
