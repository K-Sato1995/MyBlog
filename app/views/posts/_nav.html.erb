<nav class="navbar">
  <h3><%= link_to 'My Blog', root_path %></h3>
  <%= render 'author'%>

  <div class="card my-4">
  <%= form_tag(posts_path, method: :get) do %>
    <%= text_field_tag :title, params[:title],class:'form-control', placeholder:'Search' %>
  <% end %>
</div>
  <div class="card my-4">
    <% @categories.each do |category| %>
     <%= link_to category.name, posts_path(category: category.id) %>
    <% end %>
  </div>
  <div class="card my-4">
    <% @recent_posts.each do |post| %>
     <li><%= link_to post.title, post_path(post) %></li>
    <% end %>
  </div>
  <ul>
    <%= link_to 'Home', root_path %>
    <%= link_to 'Admin Home', admin_posts_path %>
  </ul>
</nav>
