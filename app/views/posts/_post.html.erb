<% @posts.each do |post| %>
  <div class="box">
      <div class= "card card-default">
         <%= link_to (image_tag post.image,class:"image"), post_path(post.id)%>
         <div class="card-body">
           <%= link_to post.title, post_path(post.id), class:'post-title'%><hr>
           <!-- <%= post.category_name %> -->
           <%= link_to 'Read the post', post_path(post.id), class:"btn btn-outline-info" %>
         </div>
       </div>
   </div>
 <% end %>
