<%= form_for [:admin, @post] do |f|%>

<div class="form-group">
  <div class="row">
    <%= f.text_field :title, placeholder:'Title', class: "col-md-12 form-control"%>
  </div>
</div>

<div class="form-group">
  <div class="row">
    <%= f.text_field :category_name, list: "categories_autocomplete", placeholder:'Category', class: "col-md-12 form-control"%>
      <datalist id="categories_autocomplete">
        <% Category.all.each do |category| %>
          <option value="<%= category.name %>">
        <% end %>
      </datalist>
  </div>
</div>

<div class="form-group">
  <div class="row">
    <%= f.text_field :tag_list, placeholder:'Tags(divided by ,)', class: "col-md-12 form-control"%>
  </div>
</div>

<div class="form-group">
  <div class="row">
    <%= f.text_field :image, placeholder:'Post Image', class:"col-md-12 form-control"%>
  </div>
</div>

<div class="form-group">
  <div class="row">
    <%= f.text_area :context ,
        cols: "30",
        rows: "30",
        id: 'context',
        class:"col-md-12 form-control",
        value: @post.context ||= initial_value
    %>
  </div>
</div>

<div class="form-group">
  <div class="row">
    <%= f.select(:score, 10.times.map{|num| [num + 1 , num + 1] },{}, {class:"col-md-12 form-control"}) %>
  </div>
</div>

<div class="form-group">
  <div class="row">
    <%= f.select(:status, Post.statuses.keys, {}, { :class => "col-md-12 form-control" }) %>
  </div>
</div>

<div class="form-group">
  <div class="row">
    <%= f.submit class:'col-md-12 btn btn-outline-primary'%>
    <% end %>
  </div>
</div>
