<% @posts.each do |post| %>
  <div class="box">
      <div class= "card card-default <%= post.category_name %>">
          <div id = 'c-btn' class = "btn btn-outline-info btn-<%= post.category_name %>"><%= post.category_name %> </div>
          <%= link_to (image_tag post.image, class: 'image'), post_path(post.id)%>
         <div class="card-body">
           <%= link_to post.title, post_path(post.id), class:'post-title'%><hr>
           <%= link_to 'Read the post', post_path(post.id), class:"btn btn-outline category-#{post.category_name}" %>
         </div>
       </div>
   </div>
 <% end %>
