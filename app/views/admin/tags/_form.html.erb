<%= form_for [:admin, @tag] do |f|%>
  <div class="form-group">
    <div class="row">
      <%= f.text_field :name, placeholder:'Name', class: "col-md-12 form-control"%>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
